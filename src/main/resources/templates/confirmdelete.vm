<html>
    <head>
        <title>$action.getText("attachdelete.name")</title>
        <meta name="decorator" content="alt.general"/>
        <meta name="admin.active.section" content="admin_plugins_menu/mailru-admin-section">
        <meta name="admin.active.tab" content="mailru-issue-cloner-configuration">
        $webResourceManager.requireResource("jira.webresources:global-static")
        $webResourceManager.requireResource("jira.webresources:jira-global")
        $webResourceManager.requireResource("com.atlassian.auiplugin:ajs")
    </head>
    <body class="aui">
        <h2>$action.getText("attachdelete.confirm")</h2><br/>
        <form class="aui" onsubmit="if (this.submitted) return false; this.submitted = true; return true"
              name="jiraform" method="post" action="DeleteAttachAction.jspa">
            <input type="hidden" name="atl_token" value="$atl_token" />
            <input type="hidden" name="id" value="$action.getIssueObject().getId()" />
            <div class="buttons-container">
                <div class="buttons">
                    <input class="button submit" type="submit" name="add" value="$action.getText("common.words.yes")" accesskey="S" title="Press Alt+Shift+S to submit form"/>
                    <input class="button submit" id="cancelButton" type="button" accesskey="`" title="Cancel (Alt+Shift + `)" name="Cancel" value="$action.getText("common.words.cancel")" onclick="location.href='/browse/$action.getIssueObject().getKey()'"/>
                </div>
            </div>
        </form>
    </body>
</html>